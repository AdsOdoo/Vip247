<odoo>
    <template id="report_base_inherit_hide_parent_address_invoice" inherit_id="account.report_invoice_document">
	    <xpath expr="//t[@t-set='address']" position="replace">
	    		<div class="row">
	    		<div class="col-7">
	    			<div><strong>Dirección de entrega:</strong></div>
                    <div t-field="o.partner_shipping_id.name"/>
                    <div>
                        <span t-field="o.partner_shipping_id" t-options="{'widget': 'contact', 'fields': ['address'], 'no_marker': True}"/>
                    </div>
                </div>
                <div class="col-5">
	    			<div><strong>Dirección de Facturación:</strong></div>
                    <div t-field="o.partner_id.name"/>
                    	<div>
                        	<span t-field="o.partner_id" t-options="{'widget': 'contact', 'fields': ['address'], 'no_marker': True}"/>
                    	</div>
                        <div>
                            RFC: <span t-field="o.partner_id.vat"/>                    
                        </div>
                	</div>
                    
                </div>
	    </xpath>
    </template>
</odoo>