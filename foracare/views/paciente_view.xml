<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_pacientes_form_inherit" model="ir.ui.view">
        <field name="name">pacientes.form.inherit</field>
        <field name="model">pacientes</field>
        <field name="inherit_id" ref="syh_module.view_pacientes_form"/>
        <field name="arch" type="xml">
        	<xpath expr="//div[@name='button_box']" position="after">
        		<div class="oe_title">
	                <h1>
	                    <field name="name" readonly="1"/>
	                </h1>
	            </div>
        	</xpath>
        </field>
    </record>
</odoo>
